<p id="notice"><%= notice %></p>

<h1>Listing Person Groups</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Url</th>
      <th>Active date</th>
      <th>Inactive date</th>
      <th>Created by</th>
      <th>Created at</th>
      <th>Updated by</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_groups.each do |person_group| %>
      <tr>
        <td><%= person_group.code %></td>
        <td><%= person_group.description %></td>
        <td><%= person_group.url %></td>
        <td><%= person_group.active_date %></td>
        <td><%= person_group.inactive_date %></td>
        <td><%= person_group.created_by %></td>
        <td><%= person_group.created_at %></td>
        <td><%= person_group.updated_by %></td>
        <td><%= person_group.updated_at %></td>
        <td><%= link_to 'Show', person_group %></td>
        <td><%= link_to 'Edit', edit_person_group_path(person_group) %></td>
        <td><%= link_to 'Destroy', person_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

